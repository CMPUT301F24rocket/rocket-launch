<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:padding="16dp">

<TextView
    android:id="@+id/edit_event_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/tea_green"
    android:textSize="25sp"
    android:textAlignment="center"
    android:text="Event Details"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_event_header"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Image view for event poster-->
            <ImageView
                android:id="@+id/edit_event_poster_view"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/cancel_button"
                style="@style/XButtonStyle"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/tea_green"

                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <ImageButton
                android:id="@+id/add_event_poster_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20sp"
                android:backgroundTint="@color/gunmetal"
                android:src="@drawable/image_multiple"

                app:layout_constraintTop_toTopOf="@id/edit_event_poster_view"
                app:layout_constraintBottom_toBottomOf="@id/edit_event_poster_view"
                app:layout_constraintStart_toStartOf="@id/edit_event_poster_view"
                app:layout_constraintEnd_toEndOf="@id/edit_event_poster_view"

                app:layout_constraintVertical_bias="0.95"
                app:layout_constraintHorizontal_bias="0.95"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/edit_event_poster_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/view_event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:padding="16dp"/> </LinearLayout>

                <View style = "@style/DividerLineStyle"/>

                <!--Set Event Capacity Size-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Event Capacity: "/>

                    <TextView
                        android:id="@+id/view_event_capacity"
                        android:layout_width="100dp"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <!--Require Geolocation Option-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Require Entrant Geolocation"/>
                    <CheckBox
                        android:id="@+id/view_checkbox_geolocation_requirement"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="20dp"
                    android:text="Event Description:"/>

                <TextView
                    android:id="@+id/view_event_description"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View style = "@style/DividerLineStyle"/>

                <Button
                    android:id="@+id/cancel_registration_button"
                    style="@style/ButtonStyleC"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:text="cancel registration"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>